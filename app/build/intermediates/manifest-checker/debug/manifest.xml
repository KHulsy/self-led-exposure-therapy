<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medikan.ptsd_treatment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.medikan.ptsd_treatment.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.medikan.ptsd_treatment.DisplayTimerActivity"
            android:parentActivityName="com.example.medikan.ptsd_treatment.MainActivity" >

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.example.medikan.ptsd_treatment.TreatmentDescriptionPage"
            android:label="@string/title_activity_treatment_description_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.medikan.ptsd_treatment.AvailableTreatmentsPage" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.example.medikan.ptsd_treatment.AvailableStepsPage" />
        <activity android:name="com.example.medikan.ptsd_treatment.TreatmentCompletionPage" />
        <activity android:name="com.example.medikan.ptsd_treatment.MotivationPage" />
        <activity android:name="com.example.medikan.ptsd_treatment.TestInfoPage" />
        <activity android:name="com.example.medikan.ptsd_treatment.TestPage" />
        <activity android:name="com.example.medikan.ptsd_treatment.TestCompletedPage" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.medikan.ptsd_treatment.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>